pipeline{
    agent any
    tools {
        maven 'maven-3.8.4'
    }
    
    
    stages {
        stage ('checkout'){
            steps{
              git 'https://github.com/othmansaadaoui/projectJenkins.git'
            }
        }
        stage ('Build'){
            steps{
                sh 'mvn clean compile'
            }
        }
        stage ('Test'){
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/Test-*.xml'
            }
        }
        stage ('Package'){
            steps {
                sh 'mvn package'
            }
        }
    }
         
    
}